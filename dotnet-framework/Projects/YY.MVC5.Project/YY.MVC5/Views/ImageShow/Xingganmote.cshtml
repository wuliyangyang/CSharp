@using YY.EF.Models;
@using PagedList.Mvc;
@using PagedList;
@using System.Web.Mvc.Html;

@model StaticPagedList<Xingganmote>

@{
    ViewBag.Title = "Xingganmote";
}

@using (Html.BeginForm("Xingganmote", "ImageShow"))
{
    <h2>
        <a href="~/ImageName/index/?group=性感模特">性感模特</a>
    </h2>
    <h3>
        @ViewBag.Name (@Model.PageNumber)
    </h3>
    <div id="partialajaxlist">
        <img src=@Url.Action("GetImage",new { pageIndex = Model.PageNumber}) />
        <br>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, pageIndex => Url.Action("Xingganmote",
        new { pageIndex ,title=ViewBag.ImageTitle}))
    </div>
}